expcode  = 'bw099'
version  = 1
piname   = 'J.M. Wrobel'
address1 = 'NRAO, P.O. Box O'
address2 = 'Socorro, NM 87801'
address3 = 'USA'
phone    = '+1-505-835-7392'
obsphone = 'VLA'
fax      = '+1-505-835-7027'
